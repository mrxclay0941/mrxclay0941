import math
try:
    print("Hãy nhập bán kính hình tròn:")
    r = float(input())
    #Tính chu vi hình tròn
    cv = 2*math.pi*r
    #Tính diện tích hình tròn
    dt = pow(r,2) #Hàm bình phương cũng có thể viết là r**2
    print("Chu vi hình tròn bằng: ", cv)
    print("Diện tích hình tròn bằng: ", dt)
